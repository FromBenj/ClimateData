<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Climate Data Analysis{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/earth.ico') }}">
    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body data-barba="wrapper" class="initial-body-color">
    {% block body_header %}
    {% endblock %}
    {% block barba %}
    {% endblock %}
    {% block body_footer %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
            <script src="https://unpkg.com/@barba/core"></script>
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</body>
</html>
